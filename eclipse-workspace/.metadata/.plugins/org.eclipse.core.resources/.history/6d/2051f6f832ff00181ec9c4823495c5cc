package loops;

public class UseWhileLoop {

	/*
	value //if value is true
	while (condition){
	//do some task
	}

	*/
	public static void main(String[] args) {
		
		int value = 10;
		
		/*while (value<0) { //if value is false, loop will not do any task (nothing will be printed in console)
			System.out.println(value);
			value --;	
		}*/
		
		while (value>0) {
			System.out.println(value);
			value--;
		}

	}

}
